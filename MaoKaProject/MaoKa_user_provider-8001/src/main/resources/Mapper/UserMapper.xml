<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Dao.UserMapper">

    <select id="isExist" resultType="boolean" parameterType="Entity.User">
        select count(*) from users where account = #{account} and password =#{password}
    </select>

    <select id="isExist" resultType="boolean" parameterType="java.lang.Integer">
        select count(*) from users where id = #{id}
    </select>

    <select id="isExist" resultType="boolean" parameterType="java.lang.String">
        select count(*) from users where account = #{account}
    </select>

    <insert id="insertUser" useGeneratedKeys="true">
        insert into users (account,password,username,email,phonenumber,image) values (#{account},#{password},#{username},#{email},#{phonenumber},#{image})
    </insert>

    <select id="selectUser" resultType="Entity.User" parameterType="java.lang.Integer">
        select * from users where id = #{id}
    </select>

    <select id="selectUser" resultType="Entity.User" parameterType="java.lang.String">
        select * from users where id = #{id}
    </select>

    <update id="updateUser">
        update users set account = #{account},password = #{password},username = #{username},email = #{email},phonenumber = #{phonenumber},image = #{image}
    </update>

    <delete id="deleteUser">
        delete users where id = #{id}
    </delete>
</mapper>